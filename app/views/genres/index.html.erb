<% content_for :header do %>
  <h1>Show Genres</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to Shows", shows_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
    <li class="nav-item">
      <%= button_to "Back to my Watchlists", user_watchlists_path(current_user), :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <p>Click on a genre below to see all shows in that Genre</p>
  <% alphebetize(@genres).each do |genre| %>
    <p><%= link_to genre.name, genre_path(genre) %></p>
  <% end %>
<% end %>
