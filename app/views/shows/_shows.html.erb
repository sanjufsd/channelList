<table class="table table-striped table-hover table-light">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Channel</th>
      <th scope="col">Seasons</th>
      <th scope="col">Genres</th>
    </tr>
  </thead>
  <tbody>
    <% alphebetize(shows).each do |show| %>
      <tr>
        <th scope="row"><%= link_to show.title, show_path(show) %></th>
        <td><%= show.channel.name %></td>
        <td><%= show.current_season %></td>
        <td><%= show.genres.map { |genre| genre.name }.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
