<% content_for :header do %>
  <h1>Add <%= @listing.show.title %> to Your Watchlist</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to #{@listing.show.title}", show_path(@listing.show), :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <%= render partial: "form", locals: {listing: @listing, show: @listing.show} %>
<% end %>
